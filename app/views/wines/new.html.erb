<div class=container>
    <div class="row">
        <%= form_with model: @wine, local:true do |f| %>
            <table class="table-bordered ">
                <tr><th class="table-active p-4">写真</th><th class="p-4"><%= f.attachment_field :image %></th></tr>
                <tr><th class="table-active p-4">名前</th><th class="p-4"><%= f.text_area :winename %></th></tr>

                <tr><th class="table-active p-4">色</th><th class="p-4"><%= f.text_area :colour %></th></tr>
                <tr><th class="table-active p-4">感想</th><th class="p-5"><%= f.text_area :comment %></th></tr>
                <tr><th class="table-active p-4">年代</th><th class="p-4"><%= f.text_area :age %></th></tr>
               <tr><th class="table-active p-4">産地</th><th class="p-4"><%= f.text_area :origin %></th></tr>
                <tr><th class="table-active p-4">香り</th><th class="p-4"><%= f.text_area :scent %></th></tr>
                <tr><th class="table-active p-4">味</th><th class="p-4"><%= f.text_area :taste %></th></tr>
                <tr><th class="table-active p-4">種類</th><th class="p-4"><%= f.label :kinds, '赤ワイン', value: 2 %>
                    <%= f.radio_button :kinds, '赤ワイン' %>
                    <%= f.label :kinds, '白ワイン', value: 1 %>
                    <%= f.radio_button :kinds, '白ワイン' %>
                    <%= f.label :kinds, 'ロゼ', value: 0 %>
                    <%= f.radio_button :kinds, 'ロゼ' %></th></tr>
                <tr><th class="table-active p-4">評価：</th><th>
                    <div id="rating-form">
                        <%= f.hidden_field :rate, :value => 'score' %>
                    </div>
                </th></tr>
            </table>
            <%= f.submit '投稿' %>
        <% end %>
        <script>
            $('#rating-form').raty({
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",
                scoreName: 'wine[rate]'
            });
        </script>
    </div>
</div>

