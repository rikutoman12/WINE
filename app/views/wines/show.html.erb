<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="mt-5">
        <%= attachment_image_tag @wine, :image,fallback: "no_image.jpg", class: 'showImage'%>
      </div>
    </div>
    <div class="col-6">
      <div class="text-center mt-5 " >
        <h3><%= @wine.winename %></h3>
      </div>
      <div class="m-4">
        <p><div class="review-rating" data-score="<%= @wine.rate %>">評価&nbsp;：&nbsp;</div></p>
      </div>
      <div class="m-4">
        <p>年代&nbsp;：&nbsp;<%= @wine.age %></p>
      </div>
      <div class="m-4">
        <p>産地&nbsp;：&nbsp;<%= @wine.origin %></p>
      </div>
      <div class="m-4">
        <p>種類&nbsp;：&nbsp;<%= @wine.kinds %></p>
      </div>
      <div class="m-4">
        <p> 色&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;：&nbsp;<%= @wine.colour %></p>
      </div>
      <div class="m-4">
        <p>香り&nbsp;：&nbsp;<%= @wine.scent %>
      </div>
      <div class="m-4">
        <p>味&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;：&nbsp;<%= @wine.taste %></p>
      </div>
      <div class="m-4">
        <p>感想&nbsp;：&nbsp;<%= @wine.comment %></p>
      </div>
      <div class="m-4">
      <P>
        <%= link_to 'edit',edit_wine_path(@wine), class:'btn btn-outline-success mr-3 w-50 fas fa-pen-nib py-2' %>
        <%= link_to 'destroy',wine_path(@wine),method: :delete,data: { confirm: 'えー本当に？？？' } , class: 'btn btn-outline-danger fas fa-trash-alt py-2'%>
      </P>
    </div>
    </div>
  </div>
</div>

<script>
  $('.review-rating').raty({
    readOnly: true,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>