<header class="shadow-sm">
  <div class="text-center">
    <h1><%= link_to 'ワインログ',root_path, class: "text-decoration-none text-dark" %></h1>
  </div>
  <nav class="navbar navbar-expand-xl navbar-light">

    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
     <div class="search-form">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <%= f.text_field :keyword, value: @keyword %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">

        <ul class="navbar-nav ml-auto">


        <li class="nav-item m-2">
          <%= link_to '  一覧画面',wines_path, class: 'btn btn-outline-dark fas fa-list py-2' %>
        </li>

        <li class="nav-item m-2">
          <%= link_to  '  投稿画面',new_wine_path, class: 'btn btn-outline-dark fas fa-pen-nib py-2' %>
        </li>
        <li class="nav-item m-2 ">
          <%#= link_to '  マイページ',user_path(current_user.id), class: 'btn btn-outline-dark fas fa-user py-2' %>
        </li>

        <li class="nav-item m-2">
          <%#= link_to '  ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-danger fas fa-sign-out-alt py-2' %>
        </li>
  </nav>
</header>